<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarroEsp8266.MainPage"
             NavigationPage.HasNavigationBar="False">

    <ContentPage.Background>
        <!-- Gradiente de fondo: morado a azul oscuro -->
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2E0854" Offset="0.0" />
            <GradientStop Color="#1A1A40" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid ColumnDefinitions="Auto,Auto"
          RowDefinitions="Auto"
          HorizontalOptions="Center"
          VerticalOptions="Center"
          Padding="40">

        <!-- Controles verticales -->
        <VerticalStackLayout Grid.Column="0"
                             Spacing="40"
                             Margin="0,0,100,0"
                             HorizontalOptions="Center"
                             VerticalOptions="Center">

            <Button Text="↑"
                    FontSize="40"
                    WidthRequest="120"
                    HeightRequest="120"
                    CornerRadius="30"
                    TextColor="White"
                    Style="{StaticResource GradientButtonStyle}"
                    Pressed="OnAdelantePressed"
                    Released="OnButtonReleased" />

            <Button Text="↓"
                    FontSize="40"
                    WidthRequest="120"
                    HeightRequest="120"
                    CornerRadius="30"
                    TextColor="White"
                    Style="{StaticResource GradientButtonStyle}"
                    Pressed="OnAtrasPressed"
                    Released="OnButtonReleased" />
        </VerticalStackLayout>

        <!-- Controles horizontales -->
        <HorizontalStackLayout Grid.Column="1"
                               Spacing="40"
                               HorizontalOptions="Center"
                               VerticalOptions="Center">

            <Button Text="←"
                    FontSize="40"
                    WidthRequest="120"
                    HeightRequest="120"
                    CornerRadius="30"
                    TextColor="White"
                    Style="{StaticResource GradientButtonStyle}"
                    Pressed="OnIzquierdaPressed"
                    Released="OnButtonReleased" />

            <Button Text="→"
                    FontSize="40"
                    WidthRequest="120"
                    HeightRequest="120"
                    CornerRadius="30"
                    TextColor="White"
                    Style="{StaticResource GradientButtonStyle}"
                    Pressed="OnDerechaPressed"
                    Released="OnButtonReleased" />
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
